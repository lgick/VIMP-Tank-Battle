    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-no-consecutive-caps": "^1.2.0",
    "globals": "^16.2.0",
    "nodemon": "^3.1.9",
    "vite": "^6.1.0",
    "vite-plugin-pug": "^0.4.1"
  },
